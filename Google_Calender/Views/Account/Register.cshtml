@model Google_Calender.Models.Comman.RegisterModel
@{
    ViewBag.Title = "Register";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<style>
    .justify-content-center {
        -webkit-box-pack: center !important;
        -ms-flex-pack: center !important;
        justify-content: center !important;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .billing-form .form-control {
        font-weight: 300;
        border: transparent !important;
        border: 1px solid rgba(0, 0, 0, 0.1) !important;
        height: 58px !important;
        padding-left: 15px;
        padding-right: 15px;
        background: transparent !important;
        color: rgba(0, 0, 0, 0.4) !important;
        font-size: 14px;
        border-radius: 0px;
        -webkit-box-shadow: none !important;
        box-shadow: none !important;
    }

    .btn {
        display: inline-block;
        padding: 12px 80px;
        font-size: 20px;
        border-radius: 41px;
        font-weight: normal;
        line-height: 1.42857143;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        -ms-touch-action: manipulation;
        touch-action: manipulation;
        cursor: pointer;
        border: 1px solid transparent;
        border-radius: 30px;
    }

        .btn.btn-primary {
            background: #ffa45c;
            border: 1px solid #ffa45c;
            color: #fff;
        }

    body {
        font-family: "Open Sans", Arial, sans-serif;
        background: #fff;
        font-size: 15px;
        line-height: 1.8;
        font-weight: 400;
        color: gray;
    }

    .cart-detail .btn-primary {
        display: block;
        width: 109%;
    }
</style>
<html>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
            <section class="ftco-section">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-xl-8 ftco-animate">
                            <form action="#" class="billing-form" method="post">
                                <h3 class="mb-4 billing-heading" style="text-align:center">Create Account</h3>
                                <div class="row align-items-end">
                                    <div class="col-md-6" style="margin-left: 430px;">

                                        <div class="form-group">
                                            <label for="firstname">Name</label>
                                            @Html.TextBoxFor(a => a.UserName, htmlAttributes: new { @type = "text", @class = "form-control", @required = "required", @placeholder = "Enter First Name" })
                                        <span style="color:red"> @Html.ValidationMessageFor(m => m.UserName)</span>
                                        </div>

                                        <div class="form-group">
                                            <label for="Email">Email Address <span style="color:blue">(use your google email here)</span></label>
                                            @Html.TextBoxFor(a => a.Email, htmlAttributes: new { @type = "email", @id = "txtEmailId", @class = "form-control", @required = "required", @placeholder = "Enter Email" })
                                            <span style="color:red"> @Html.ValidationMessageFor(m => m.Email)</span>
                                        </div>


                                        <div class="form-group">
                                            <label for="Password">Password</label>
                                            @Html.TextBoxFor(a => a.Password, htmlAttributes: new { @type = "password", @required = "required", @class = "form-control", @placeholder = "Enter Password" })
                                            <span style="color:red">   @Html.ValidationMessageFor(m => m.Password)</span>
                                        </div>

                                        <div class="form-group">
                                            <label for="mobileno"> Confirm Password</label>
                                            @Html.TextBoxFor(a => a.ConfirmPassword, htmlAttributes: new { @type = "text", @class = "form-control", @required = "required", @placeholder = "Enter Mobile number" })
                                            <span style="color:red"> @Html.ValidationMessageFor(m => m.ConfirmPassword)</span>
                                        </div>

                                        <div class="form-group">
                                            <input type="submit" value="Submit" id="btnValidate" class="btn btn-primary py-3 px-5">
                                        </div>
                                    </div>
                                </div>
                            </form><!-- END -->
                        </div>
                    </div>
                </div>
            </section>

    }
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


